## 재판조력자 선발 기본
CREATE TABLE TB_001 (
	 USER_PROPER_NUM	INT auto_increment,
	 USER_ID 	VARCHAR(10) NOT NULL,
	 USER_PW 	VARCHAR(100) NOT NULL,
	 USER_NAME 	VARCHAR(10)	NOT NULL,
	 USER_RRN_F 	VARCHAR(30)	NOT NULL,
	 USER_RRN_B 	VARCHAR(30)	NOT NULL,
	 USER_EMAIL_F 	VARCHAR(50) NOT NULL,
	 USER_EMAIL_B 	VARCHAR(50) NOT NULL,
	 USER_PHONE 	VARCHAR(20)	NOT NULL,
	 USER_JOB 	VARCHAR(100)	NULL,
	 USER_AR 	VARCHAR(100)	NULL,
	 USER_AR_ZONECODE 	VARCHAR(20)	NULL,
	 USER_AR_DETAIL 	VARCHAR(200)	NULL,
	 USER_BANK 	VARCHAR(100) NOT NULL,
	 USER_BANK_ACCOUNT 	VARCHAR(100) NOT NULL,
	 USER_BANK_HOLDER 	VARCHAR(20)	NOT NULL,
	 USER_JOINDATE 	DATE default (current_date),
	 USER_DELETE_YN 	VARCHAR(1)	NOT NULL check(USER_DELETE_YN in ('Y','N')) default 'N',
     USER_EDCTN_FINAL  VARCHAR(50) DEFAULT NULL,
     USER_ROLE VARCHAR(20) DEFAULT 'USER',
     primary key (USER_PROPER_NUM,USER_ID)
);


## 재판조력자 분류
CREATE TABLE  TB_010  (
	 TRIAL_FCLTT_PROPER_NUM 	INT primary KEY auto_increment,
	 TRIAL_FCLTT_MAIN_CODE 	VARCHAR(50)	NOT NULL,
	 TRIAL_FCLTT_CLASIFI_CODE 	VARCHAR(50)	NOT NULL,
	 TRIAL_FCLTT_SBCLS_CODE 	VARCHAR(50) NULL,
	 TRIAL_FCLTT_DESCRIPTION 	VARCHAR(200) NOT NULL
);


## 법원 분류
CREATE TABLE  TB_011  (
	 COURT_PROPER_NUM 	INT primary KEY auto_increment,
     COURT_REGION VARCHAR(30) NOT NULL,
	 COURT_NAME 	VARCHAR(50)	NOT NULL
);

## 재판조력자 선발 신청자 상세
CREATE TABLE  TB_005  (
	 APLCN_DTLS_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     USER_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(USER_PROPER_NUM) REFERENCES TB_001(USER_PROPER_NUM),
     TRIAL_FCLTT_PROPER_NUM 	INT	NOT NULL,
	 FOREIGN KEY(TRIAL_FCLTT_PROPER_NUM) REFERENCES TB_010(TRIAL_FCLTT_PROPER_NUM),
     COURT_PROPER1 	VARCHAR(30)	NOT NULL,
     COURT_PROPER2 	VARCHAR(30) NULL,
	 LIGTN_CASE_CARER_YN 	VARCHAR(1)	DEFAULT 'N',
	 LIGTN_CASE_CARER_ETC 	VARCHAR(500)	NULL,
	 INSRN_INDST_CARER_YN 	VARCHAR(1)	DEFAULT 'N',
	 INSRN_INDST_CARER_ETC 	VARCHAR(500)	NULL,
	 CRIMINAL_PENALTY_CARER_YN 	VARCHAR(1)	DEFAULT 'N',
	 CRIMINAL_PENALTY_CARER_ETC 	VARCHAR(500)	NULL,
	 APLICN_DTLS_STS 	VARCHAR(5) NOT NULL	default 'ING',
	 APLICN_DTLS_DATE 	DATE default (current_date)
);

## 재판조력자 선발 신청자 학력상세
CREATE TABLE  TB_006  (
	 EDCTN_DTLS_PROPER_NUM 	INT primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
	 EDCTN_SCHOOL_NAME 	VARCHAR(20)	NOT NULL,
	 EDCTN_MAJOR 	VARCHAR(20)	NULL,
	 EDCTN_DEGREE 	VARCHAR(10)	NULL,
	 EDCTN_ADMSN_DATE 	DATE NOT NULL,
	 EDCTN_GRDTN_DATE 	DATE NULL,
	 EDCTN_FINAL 	VARCHAR(10) default '졸업'
);

## 재판조력자 선발 신청자 경력 상세 
CREATE TABLE  TB_007  (
	 APLCN_CARER_PROPER_NUM INT primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
	 COMPANY_NAME 	VARCHAR(30)	NULL,
	 CARER_TYPE 	VARCHAR(5)	NULL,
	 WORK_START_DATE 	DATE	NULL,
	 WORK_END_DATE 	DATE	NULL,
	 WORK_DESCRIPTION 	VARCHAR(100)	NULL,
	 WORK_DEPARTMENT 	VARCHAR(20)	NULL,
	 WORK_POSITION 	VARCHAR(10)	NULL
);

## 재판조력자 선발 신청자 경력 상세 - 특기사항 및 활동내용
CREATE TABLE  TB_007_2 (
     APLCN_CARER_PROPER_NUM INT primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
	 CARER_DESCRIPTION 	VARCHAR(3000)	NOT NULL,
	 SPECIAL_NOTE_DESCRIPTION 	VARCHAR(3000)	NOT NULL
);


## 재판조력자 선발 신청자 자격증상세
CREATE TABLE  TB_008  (
	 APLCN_CRTFC_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
	 CRTFC_TYPE 	VARCHAR(50)	NULL,
	 ISSUE_AGENCY 	VARCHAR(50)	NULL,
	 CRTFC_NUMBER 	VARCHAR(20)	NULL,
	 ISSUE_DATE 	DATE	NULL
);



## 재판조력자 선발 신청자 첨부파일내역      
CREATE TABLE  TB_009  (
	 APLCN_ATCH_FILE_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
	 FILE_CODE 	VARCHAR(5)	NOT NULL check (FILE_CODE in ('CO','PE','OT')),
	 FILE_TYPE 	VARCHAR(20)	NOT NULL,
	 ORIGINAL_FILE_NAME VARCHAR(500) NOT NULL,
	 FILE_PATH 	VARCHAR(1000) NOT NULL
);                                                                                        


## 재판조력자 등재 명단
CREATE TABLE  TB_014  (
	 ACCEPT_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     USER_PROPER_NUM INT	NOT NULL,
     FOREIGN KEY(USER_PROPER_NUM) REFERENCES TB_001(USER_PROPER_NUM),
     TRIAL_FCLTT_PROPER_NUM INT	NOT NULL,
	 FOREIGN KEY(TRIAL_FCLTT_PROPER_NUM) REFERENCES TB_010(TRIAL_FCLTT_PROPER_NUM),
     COURT_PROPER_NUM INT NOT NULL,
	 FOREIGN KEY(COURT_PROPER_NUM) REFERENCES TB_011(COURT_PROPER_NUM),
	 ACCEPT_DATE DATE default (current_date),
	 ACCEPT_ETC 	VARCHAR(2000)	NULL,
	 ACCEPT_ACT_YN 	VARCHAR(1) DEFAULT 'Y' CHECK (ACCEPT_ACT_YN IN ('Y', 'N'))
);



## 재판조력자 활동내역
CREATE TABLE  TB_012  (
	 ACT_PROPER_NUM 	INT primary KEY auto_increment,
	 TRIAL_NUM INT NULL,
     ACCEPT_PROPER_NUM INT	NOT NULL,
     FOREIGN KEY(ACCEPT_PROPER_NUM) REFERENCES TB_014(ACCEPT_PROPER_NUM),
	 CHOSEN_DATE 	DATE NOT NULL,
	 ATTENDANCE_DATE 	DATE NULL,
	 ACT_COMPLETE_YN 	VARCHAR(1)	NOT NULL DEFAULT 'N'
);

##관리자 계정
CREATE TABLE  TB_015  (
	 ADMIN_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
	 ADMIN_ID 	VARCHAR(20) NOT NULL,
	 ADMIN_PW 	VARCHAR(20)	NOT NULL,
	 ADMIN_AUTH 	VARCHAR(10)	NOT NULL,
     ADMIN_NAME VARCHAR(30) NOT NULL
);

## 재판조력자 선발 공고내역
CREATE TABLE  TB_002  (
	 ANNOUNCE_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     ADMIN_PROPER_NUM 	INT	NOT NULL,
	 FOREIGN KEY(ADMIN_PROPER_NUM) REFERENCES TB_015(ADMIN_PROPER_NUM),
     TRIAL_FCLTT_PROPER_NUM INT	NOT NULL,
	 FOREIGN KEY(TRIAL_FCLTT_PROPER_NUM) REFERENCES TB_010(TRIAL_FCLTT_PROPER_NUM),
     ANNOUNCE_TITLE 	VARCHAR(100) NOT NULL,
	 ANNOUNCE_CONTENT 	VARCHAR(1500) NOT NULL,
	 ANNOUNCE_START_DATE 	DATE NOT NULL,
	 ANNOUNCE_END_DATE 	DATE NOT NULL,
	 ANNOUNCE_FIRST_DATE 	DATE default (current_date),
	 ANNOUNCE_LAST_DATE 	DATE default (current_date)	
);



## 재판조력자 선발 FAQ내역 
CREATE TABLE  TB_004  (
	 FAQ_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     ADMIN_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(ADMIN_PROPER_NUM) REFERENCES TB_015(ADMIN_PROPER_NUM),
	 FAQ_ASK_CONTENT 	VARCHAR(1000) NOT NULL,
	 FAQ_ASK_COMMENT 	VARCHAR(2000) NOT NULL,
	 FAQ_ASK_DATE 	DATE default (current_date)
);



## 재판조력자 신청자 평가
CREATE TABLE  TB_013  (
	 EVALUATE_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     APLCN_DTLS_PROPER_NUM INT	NOT NULL,
     FOREIGN KEY(APLCN_DTLS_PROPER_NUM) REFERENCES TB_005(APLCN_DTLS_PROPER_NUM),
     ADMIN_PROPER_NUM INT	NOT NULL,
	 FOREIGN KEY(ADMIN_PROPER_NUM) REFERENCES TB_015(ADMIN_PROPER_NUM),
	 ALL_CARER_SCORE 	INT(1)	NOT NULL,
	 JRSDC_CARER_SCORE 	INT(1)	NOT NULL,
	 OFFICE_SCORE 	INT(1)	NOT NULL,
	 PERSONALITY_SCORE 	INT(1)	NOT NULL,
	 INTERVIEW_SCORE 	INT(1)	NOT NULL,
	 CERTIFICATE_SCORE 	INT(1)	NOT NULL,
	 EVALUATE_SCORE 	INT(1)	NOT NULL,
	 JUDGE_RECOM_SCORE 	INT(1)	NOT NULL,
	 REVIEW_ETC 	VARCHAR(500)	NOT NULL
);
## 재판조력자 선발 공지내역
CREATE TABLE  TB_003  (
	 NOTICE_PROPER_NUM 	INT	NOT NULL primary KEY auto_increment,
     ADMIN_PROPER_NUM 	INT	NOT NULL,
     FOREIGN KEY(ADMIN_PROPER_NUM) REFERENCES TB_015(ADMIN_PROPER_NUM),
	 NOTICE_TITLE 	VARCHAR(100) NOT NULL,
	 NOTICE_CONTENT 	VARCHAR(3000) NOT NULL,
	 NOTICE_DATE 	DATE default (current_date)
);


